{
    "name": "bolao-privado",
    "version": "1.0.0",
    "description": "Mini Polymarket - Bol√£o Privado entre Amigos",
    "main": "server.js",
    "scripts": {
        "start": "node scripts/setup-postgres.js && node server.js",
        "dev": "node server.js",
        "test": "jest --coverage --verbose",
        "test:watch": "jest --watch",
        "test:unit": "jest tests/unit",
        "test:integration": "jest tests/integration"
    },
    "keywords": [
        "apostas",
        "bolao",
        "polymarket"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^4.18.2",
        "express-rate-limit": "^8.2.1",
        "express-session": "^1.18.2",
        "helmet": "^8.1.0",
        "pg": "^8.18.0"
    },
    "devDependencies": {
        "jest": "^29.7.0",
        "supertest": "^6.3.4"
    },
    "jest": {
        "testEnvironment": "node",
        "coverageDirectory": "coverage",
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/**/*.test.js",
            "!node_modules/**",
            "!tests/**",
            "!coverage/**"
        ],
        "testMatch": [
            "**/tests/**/*.test.js"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/tests/setup.js"
        ]
    }
}
